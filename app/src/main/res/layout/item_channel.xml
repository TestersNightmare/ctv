<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#80FFFFFF">

    <ImageView
        android:id="@+id/channel_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/channel_icon_description" />

    <TextView
        android:id="@+id/channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/channel_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/channel_name_on_icon"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/channel_icon"
        android:layout_alignStart="@id/channel_icon"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        android:background="#80000000" />

</RelativeLayout>